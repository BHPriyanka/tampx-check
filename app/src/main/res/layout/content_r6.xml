<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_r6"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.angelhack.ladyproblems.activity.R6Activity"
    tools:showIn="@layout/activity_r6">

    <TextView
        android:text="Activity Level? "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="63dp"
        android:id="@+id/textView8"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textStyle="normal|italic" />

    <Button
        android:text="Low or Resting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button18"
        android:layout_alignStart="@+id/textView8"
        android:layout_marginTop="29dp"
        android:id="@+id/button19"
        android:onClick="activityLevel"/>

    <Button
        android:text="High or Exercising"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button20"
        android:layout_alignStart="@+id/button18"
        android:layout_marginTop="25dp"
        android:id="@+id/button21"
        android:onClick="activityLevel"/>

    <Button
        android:text="Sleeping(Upto 8 hours)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:id="@+id/button18"
        android:layout_below="@+id/textView8"
        android:layout_alignStart="@+id/button19"
        android:onClick="activityLevel"/>

    <Button
        android:text="Moderate or sitting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:id="@+id/button20"
        android:layout_below="@+id/button19"
        android:layout_alignStart="@+id/button19"
        android:onClick="activityLevel"/>

</RelativeLayout>
