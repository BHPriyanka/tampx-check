<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/content_r6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.angelhack.ladyproblems.activity.R6Activity"
        tools:showIn="@layout/activity_r6">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="42dp"
            android:text="@string/activity_level"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textStyle="normal|italic" />

        <Button
            android:id="@+id/button18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/button19"
            android:layout_below="@+id/textView8"
            android:layout_marginTop="42dp"
            android:onClick="sleep"
            android:text="@string/sleeping_upto_8_hours"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <Button
            android:id="@+id/button19"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView8"
            android:layout_below="@+id/button18"
            android:layout_marginTop="32dp"
            android:onClick="low"
            android:text="@string/low_or_resting"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <Button
            android:id="@+id/button20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/button19"
            android:layout_below="@+id/button19"
            android:layout_marginTop="32dp"
            android:onClick="mod"
            android:text="@string/moderate_or_sitting"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <Button
            android:id="@+id/button21"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/button18"
            android:layout_below="@+id/button20"
            android:layout_marginTop="32dp"
            android:onClick="high"
            android:text="@string/high_or_exercising"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    </RelativeLayout>

</ScrollView>