<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_r5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.angelhack.ladyproblems.activity.R5Activity"
    tools:showIn="@layout/activity_r5">

    <Button
        android:text="Increase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button16"
        android:layout_alignStart="@+id/button15"
        android:layout_marginTop="20dp"
        android:id="@+id/button17"
        android:layout_alignEnd="@+id/button15" />

    <TextView
        android:text="Next Menstrual Flow??"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="93dp"
        android:id="@+id/textView7"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="24dp"
        android:onClick="flow"/>

    <Button
        android:text="Stay same"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button16"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/button15"
        android:onClick="flow"/>

    <Button
        android:text="Decrease"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button15"
        android:onClick="flow"
        android:layout_above="@+id/button16"
        android:layout_alignStart="@+id/textView7"
        android:layout_marginBottom="15dp" />

</RelativeLayout>
